<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cloudflare.soccerapp.RegisterTeamActivity">

        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnAddTeamMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Team Members"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:text="Cancel" />

        <EditText
            android:id="@+id/editTeamName"
            android:hint="Team Name"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editTeamCaptain"
            android:hint="Team Captain"
            android:layout_below="@id/editTeamName"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/editChairman"
            android:hint="Chairman"
            android:layout_below="@id/editTeamCaptain"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />

        <EditText
            android:id="@+id/editFounded"
            android:hint="Founded"
            android:layout_below="@id/editChairman"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/editChairman"
            android:layout_alignLeft="@+id/btnCancel"
            android:layout_alignStart="@+id/btnCancel" />


</RelativeLayout>

