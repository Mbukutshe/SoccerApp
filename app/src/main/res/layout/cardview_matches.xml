<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="25dp"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPaddingLeft="16dp"
    card_view:contentPaddingTop="16dp"
    card_view:contentPaddingRight="16dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:theme="@style/AlertDialog.AppCompat"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp">


        <FrameLayout
            android:id="@+id/teams"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp">
        <LinearLayout
            android:id="@+id/first_team"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:id="@+id/first_badge"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/firstteam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="Kaizer Chiefs"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/middle_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="Vs"
            android:textSize="12pt"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_footer"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_alignParentRight="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:id="@+id/second_badge"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/secondteam"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:text="Orlando Pirates"/>
            </FrameLayout>
        </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/teams"
            android:orientation="vertical">
            android:layout_marginBottom="10dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:id="@+id/more"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:rotation="90"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/threedots"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/more_details"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/match_ground"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal|top" />
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/time_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/date_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom" />
            </FrameLayout>
        </FrameLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>