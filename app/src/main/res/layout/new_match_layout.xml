<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:visibility="gone"
    android:id="@+id/match"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:padding="@dimen/activity_horizontal_margin">
    <RelativeLayout
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/first"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardElevation="1dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        card_view:cardCornerRadius="10dp"
        card_view:contentPaddingLeft="16dp"
        card_view:contentPaddingTop="16dp"
        card_view:contentPaddingRight="16dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:theme="@style/AlertDialog.AppCompat">
        <FrameLayout
            android:id="@+id/teams"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_width="match_parent">
            <LinearLayout
                android:layout_gravity="left"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/teama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:theme="@style/SpinnerAppTheme"
                    />
                <ImageView
                    android:id="@+id/first_badge"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ajax"
                    android:layout_gravity="bottom|center_horizontal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/font"
                    android:text="@string/vs"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/teamb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:theme="@style/SpinnerAppTheme"
                    />
                <ImageView
                    android:id="@+id/second_badge"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/celtic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    />
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="50dp"
            android:layout_below="@+id/teams"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/Stadium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:theme="@style/SpinnerAppTheme"
                />
        </FrameLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/second"
        android:layout_below="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardElevation="1dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        card_view:cardCornerRadius="10dp"
        card_view:contentPaddingLeft="16dp"
        card_view:contentPaddingTop="16dp"
        card_view:contentPaddingRight="16dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:theme="@style/AlertDialog.AppCompat">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/font"
            android:text="@string/time"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TimePicker
                android:id="@+id/time"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TimePicker>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/third"
        android:layout_below="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardElevation="1dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        card_view:cardCornerRadius="10dp"
        card_view:contentPaddingLeft="16dp"
        card_view:contentPaddingTop="16dp"
        card_view:contentPaddingRight="16dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:theme="@style/AlertDialog.AppCompat">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/font"
            android:text="@string/date"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/third"
        android:id="@+id/fourth"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnMatches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/button_selector"
            android:text="@string/submit"
            android:background="@drawable/button_background"
            android:layout_gravity="center"/>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>