<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <layer-list >
            <item>
                <shape>
                    <gradient
                        android:angle="45"
                        android:type="linear" />
                    <corners
                        android:radius="20dp" />
                    <padding
                        android:bottom="3dp"
                        android:left="10dp"
                        android:right="0dp"
                        android:top="3dp" />
                </shape>
            </item>
            <item
                android:left="10dp">
                <bitmap
                    android:gravity="right|center"
                    android:src="@drawable/ic_dropdown" />
            </item>
        </layer-list>
    </item>
</selector>
